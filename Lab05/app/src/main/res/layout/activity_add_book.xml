<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookActivity">
    <EditText
        android:id="@+id/edt_title" android:layout_width="0dp" android:layout_height="48dp" android:layout_marginTop="16dp" android:hint="Title" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/edt_author" android:layout_width="0dp" android:layout_height="48dp" android:layout_marginTop="8dp" android:hint="Author" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_title" />
    <EditText
        android:id="@+id/edt_description" android:layout_width="0dp"
        android:layout_height="48dp" android:layout_marginTop="8dp"
        android:hint="Description" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/edt_author" />
    <Button
        android:id="@+id/btn_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp"
        android:text="Save" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@id/edt_description" />
</androidx.constraintlayout.widget.ConstraintLayout>